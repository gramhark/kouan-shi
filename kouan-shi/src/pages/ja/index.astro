---
// このページは章を選択するためのハブとなります
import OrnamentalFrame from '../../components/OrnamentalFrame.astro';
---
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- ▼▼▼ 変更箇所 ▼▼▼ -->
    <title>光闇詞 | 光と闇の心の在り方を説く哲学</title>
    <meta name="description" content="光と闇を持つ心の在り方を哲学的に説く『光闇詞』の公式サイト。日々の思索の糧となる言葉を探求します。">
    <!-- ▲▲▲ 変更箇所 ▲▲▲ -->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

  <main class="chapter-selection">
    <OrnamentalFrame variant="chapter">
      <h1 class="main-title">光闇詞</h1>
      <nav class="chapter-nav">
        <a href="./prelude/" class="nav-button">前詞四十節</a>
        <a href="./interlude/" class="nav-button">中詞四節</a>
        <a href="./finale/" class="nav-button">終節</a>
      </nav>
      <div class="back-area">
        <a href="/" class="nav-button back-button">戻る</a>
      </div>
    </OrnamentalFrame>
  </main>

</body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Noto Serif JP', serif;
    background-color: #f4f1ea;
    background-image: url('/images/parchment-bg.svg');
    background-repeat: repeat;
    color: #333;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    opacity: 0;
    animation: fadeInPage 0.8s ease forwards;
  }

  @keyframes fadeInPage {
      from { opacity: 0; }
      to { opacity: 1; }
  }

  .chapter-selection {
    text-align: center;
  }

  .main-title {
    font-size: 6vw;
    font-weight: 700;
    margin-bottom: 4rem;
  }

  .chapter-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-button {
    display: inline-block;
    padding: 1rem 3.5rem;
    min-width: 300px;
    text-align: center;
    border: 1px solid #333;
    border-radius: 5px;
    color: #333;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    background-color: #333;
    color: #f4f1ea;
  }

  .back-area {
    margin-top: 3rem;
    text-align: center;
  }
</style>
